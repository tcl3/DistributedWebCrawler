<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info" >

	<!-- the targets to write to -->
	<targets>
		<target xsi:type="Console" name="logconsole"
				layout="${logger}|${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--<logger name="Crawler.Core.*" minlevel="Error" writeTo="logfile,logconsole" />-->
		<!--<logger name="*" minlevel="Error" writeTo="logfile,logconsole" />-->
		<logger name="DistributedWebCrawler.Core.Components.IngesterCrawlerComponent" minlevel="Info" writeTo="logconsole" />	
		<logger name="DistributedWebCrawler.Core.Components.ParserCrawlerComponent" minlevel="Info" writeTo="logconsole" />
		<logger name="DistributedWebCrawler.Core.Components.SchedulerCrawlerComponent" minlevel="Info" writeTo="logconsole" />
		<logger name="DistributedWebCrawler.Console.*" minlevel="Error" writeTo="logconsole" />
	</rules>
</nlog>